public class tea {

	static boolean weather = true;
	static boolean hasTea = false;
	
	static void teas() {
		if (weather == true && hasTea == true) {
			System.out.println("Peter enjoys tea with friends");
			
		}else if(weather == true && hasTea == false) {
			System.out.println("Peter enjoys the sun alone");
		}else if (weather == false && hasTea == false) {
			System.out.println("Peter stays alone in his rabbit hole and reads a book");
		}else {
			System.out.println("Peter has tea in his nook");
		}
	}
	
